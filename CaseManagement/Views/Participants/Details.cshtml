@model CaseManagement.Models.Participants

@{
    ViewBag.Title = "Personal Information";
}

<h2>@Model.Name's Personal Information</h2>

@using (Html.BeginForm("Save", "Participants"))
                {
<div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDate)
       @Html.TextBoxFor(m => m.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
   </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
       @Html.TextBoxFor(m => m.Address, new { @class = "form-control", id = "address" })
    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.Gender)
